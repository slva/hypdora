#!/bin/bash
# Power menu for Omarchy Fedora

CHOICES="Lock\nLogout\nSuspend\nReboot\nShutdown"

SELECTED=$(echo -e "$CHOICES" | wofi --dmenu --prompt "Power" --width 200 --height 250)

case "$SELECTED" in
    "Lock")
        hyprlock
        ;;
    "Logout")
        hyprctl dispatch exit
        ;;
    "Suspend")
        systemctl suspend
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
esac
